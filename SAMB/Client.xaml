<Window x:Class="SAMB.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAMB"
        mc:Ignorable="d"
        Title="Запись пользователей" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch">
            <TextBlock Text="Регистрация пользователей" Margin="15" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox x:Name="LoginTextBox" Margin="5"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox x:Name="passwordBox" Margin="5"/>
            <TextBlock Text="Роль" Margin="5"/>
            <ComboBox Name="RoleComboBox" Margin="5"/>
            <Button x:Name="AddUserButton" Content="Добавить" Click="AddUserButton_Click" Margin="15"/>
        </StackPanel>
        <Button x:Name="ExitButton" Content="Вернуться на прошлую страницу" Click="ExitButton_Click" 
            Grid.Column="2" Grid.Row="2" Background="Gray" Foreground="White"/>
        <Button x:Name="OutButton" Content="Выход из приложения" Click="OutButton_Click"
            Grid.Column="0" Grid.Row="2" Background="Gray" Foreground="White"/>
    </Grid>
</Window>
