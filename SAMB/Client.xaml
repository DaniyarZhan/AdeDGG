<Window x:Class="SAMB.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAMB"
        mc:Ignorable="d"
        Title="Запись пользователей" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Левая часть - Добавление пользователя -->
        <TextBlock Text="Добавление пользователя" FontSize="16" FontWeight="Bold" 
                   Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
            <TextBlock Text="Логин:" Margin="0,5"/>
            <TextBox x:Name="LoginTextBox" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Подтверждение пароля:" Margin="0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Роль:" Margin="0,5"/>
            <ComboBox x:Name="RoleComboBox" Height="25" Margin="0,0,0,15">
                <ComboBoxItem Content="Гость" IsSelected="True"/>
                <ComboBoxItem Content="Библиотекарь"/>
            </ComboBox>

            <Button x:Name="AddUserButton" Content="Добавить пользователя" 
                    Click="AddUserButton_Click" Height="30" Background="#FF0080FF" Foreground="White"/>

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="0,10" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Правая часть - Список пользователей -->
        <TextBlock Text="Список пользователей" FontSize="16" FontWeight="Bold" 
                   Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <ListBox x:Name="UsersListBox" Grid.Row="1" Grid.Column="1" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Login}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Role}" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки навигации -->
        
        <Button x:Name="ExitButton" Content="Вернуться в меню" Grid.Column="1" Grid.Row="2"
                    Click="ExitButton_Click" Margin="5"  Background="Gray" Foreground="White"/>
        <Button x:Name="OutButton" Content="Выход из приложения" Grid.Column="0" Grid.Row="2" 
                    Click="OutButton_Click" Margin="5" Padding="10,5" Background="Gray" Foreground="White"/>
    </Grid>
</Window>
