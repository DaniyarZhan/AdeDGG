<Window x:Class="SAMB.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAMB"
        mc:Ignorable="d"
        Title="Меню" 
        MinHeight="450" MinWidth="800" MaxHeight="650" MaxWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="1" Grid.Column="1" Columns="1">
            <Button x:Name="SearchButton" Content="Поиск современных книг" 
                    Click="SearchButton_Click" Margin="5" Background="Aqua" Foreground="Firebrick" FontSize="18"/>
            <Button x:Name="AddButton" Content="Добавление современных книг" 
                    Click="AddButton_Click" Margin="5" Background="Aqua" Foreground="Firebrick" FontSize="18"/>
            <Button x:Name="RemoveButton" Content="Удаление книг" 
                    Click="RemoveButton_Click" Margin="5" Background="Aqua" Foreground="Firebrick" FontSize="18"/>
            <Button x:Name="AddClientButton" Content="Добавление пользователя" Click="AddClientButton_Click"
                    Margin="5" Background="Aqua" Foreground="Firebrick" FontSize="18"/>
        </UniformGrid>
        <Button x:Name="ExitButton" Content="Вернуться на прошлую страницу" Click="ExitButton_Click" 
            Grid.Column="2" Grid.Row="2" Background="Gray" Foreground="White"/>
        <Button x:Name="OutButton" Content="Выход из приложения" Click="OutButton_Click" 
            Grid.Column="0" Grid.Row="2" Background="Gray" Foreground="White"/>
    </Grid>
</Window>
