<Window x:Class="SAMB.AddBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAMB"
        mc:Ignorable="d"
        Height="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>            
            <RowDefinition Height="auto"/>            
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Название книги" Margin="5"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock Text="Жанр книги" Margin="5"/>
            <TextBox x:Name="GenreTextBox"/>
            <TextBlock Text="Автор книги" Margin="5"/>
            <TextBox x:Name="AuthorTextBox"/>
            <TextBlock Text="Дата издания книги" Margin="5"/>
            <DatePicker x:Name="DateIsdDatePicker" SelectedDateFormat="Short"/>
            <Button x:Name="AddBookButton" Content="Добавить" Click="AddBookButton_Click" Margin="10" IsDefault="True"/>
        </StackPanel>
        <ListBox x:Name="BooksListBox" Grid.Row="1" Grid.Column="1"/>
        <TextBlock Text="Добавление книг" FontSize="20" HorizontalAlignment="Center"/>
        <TextBlock Text="Список книг" FontSize="20" HorizontalAlignment="Center" Grid.Column="1"/>
        <Button x:Name="ExitButton" Content="Вернуться на прошлую страницу" Click="ExitButton_Click" 
            Grid.Column="2" Grid.Row="2" Background="Gray" Foreground="White" Margin="5"/>
        <Button x:Name="OutButton" Content="Выход из приложения" Click="OutButton_Click" 
            Grid.Column="0" Grid.Row="2" Background="Gray" Foreground="White" Margin="5"/>
    </Grid>
</Window>
